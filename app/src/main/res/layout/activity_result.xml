<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_result"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경험치가 올랐어요!"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/tv_inc"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/result_tv"
        android:gravity="center"
        android:text="+30"
        android:textSize="80sp"
        android:textColor="#649657"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_done"
        app:layout_constraintTop_toBottomOf="@id/tv_inc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="오늘의 퀴즈 완료"
        android:textColor="#00D57C"
        android:textSize="24sp"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>